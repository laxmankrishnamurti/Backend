<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <style>
      body {
        background-color: rgb(192, 248, 229);
      }
      .container {
        width: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem 0rem;
        margin: auto;
        border-radius: 1rem;
        text-align: center;
      }
      thead {
        background-color: brown;
        color: white;
      }
      th,
      td {
        padding: 5px 20px;
      }
      .visit-link {
        text-decoration: none;
        color: red;
      }
      .visit-link:active {
        color: brown;
      }
      .visit-link:visited {
        color: blueviolet;
      }
      .link-container {
        display: flex;
        gap: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="link-container">
        <a href="/url" target="_self"
          >Click here to generate shorURL for your website</a
        >
        <a href="/user" target="_self">Create New Account</a>
        <a href="#" id="logout">Logout</a>
      </div>
      <div>
        <% if(locals.urls){ %>
        <table border="2">
          <thead>
            <th>S.N</th>
            <th>Short-ID</th>
            <th>Redirect</th>
            <th>Click</th>
            <th>Visit</th>
            <th>Analytics</th>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= (index + 1) %></td>
              <td><%= url.shortID %></td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
              <td>
                <a
                  class="visit-link"
                  href="http://localhost:4003/url/<%= url.shortID %>"
                  target="_blank"
                  >Go</a
                >
              </td>
              <td>
                <a
                  class="visit-link"
                  href="http://localhost:4003/url/analytics/<%= url.shortID %>"
                  target="_self"
                  >Watch</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <% } %>
      </div>
    </div>
  </body>
